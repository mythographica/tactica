{
	"name": "@mnemonica/tactica",
	"version": "0.1.0",
	"description": "TypeScript Language Service Plugin for Mnemonica - generates types for nested constructors",
	"main": "lib/index.js",
	"types": "lib/index.d.ts",
	"bin": {
		"tactica": "lib/cli.js"
	},
	"files": [
		"lib/",
		"README.md",
		"LICENSE"
	],
	"scripts": {
		"build": "rm -rf ./lib && npx tsc --pretty && npm run fix-permissions",
		"fix-permissions": "chmod +x lib/cli.js",
		"watch": "npx tsc --pretty -w",
		"test": "TS_NODE_PROJECT=./tsconfig.test.json mocha test/**/*.test.ts",
		"test:coverage": "npx nyc npm test",
		"test:coverage:html": "npx nyc --reporter=html npm test",
		"lint": "npx eslint --fix ./src",
		"use:public": "node -e \"const fs=require('fs'),p=JSON.parse(fs.readFileSync('package.json','utf8'));p.peerDependencies.mnemonica='latest';p.devDependencies.mnemonica='latest';p.devDependencies.typeomatica='latest';fs.writeFileSync('package.json',JSON.stringify(p,null,'\\t')+'\\n');console.log('Switched to PUBLIC npm dependencies (latest)');\" && rm -rf node_modules package-lock.json && npm install",
		"use:local": "node -e \"const fs=require('fs'),p=JSON.parse(fs.readFileSync('package.json','utf8'));p.peerDependencies.mnemonica='file:../core';p.devDependencies.mnemonica='file:../core';p.devDependencies.typeomatica='file:../typeomatica';fs.writeFileSync('package.json',JSON.stringify(p,null,'\\t')+'\\n');console.log('Switched to LOCAL file: dependencies');\""
	},
	"keywords": [
		"mnemonica",
		"typescript",
		"language-service",
		"plugin",
		"types",
		"intellisense"
	],
	"author": "went.out@gmail.com",
	"contributors": [
		"Roo AI <ai-assistant@example.com>"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/mythographica/tactica.git"
	},
	"license": "MIT",
	"peerDependencies": {
		"mnemonica": "file:../core",
		"typescript": "^5.0.0"
	},
	"devDependencies": {
		"@istanbuljs/nyc-config-typescript": "^1.0.2",
		"@types/chai": "^4.3.0",
		"@types/mocha": "^10.0.0",
		"@types/node": "^20.0.0",
		"chai": "^4.3.10",
		"mnemonica": "file:../core",
		"mocha": "^10.2.0",
		"nyc": "^17.1.0",
		"ts-node": "^10.9.0",
		"typeomatica": "file:../typeomatica",
		"typescript": "^5.3.0"
	},
	"dependencies": {
		"@types/chokidar": "^2.1.0",
		"chokidar": "^3.5.0"
	}
}
